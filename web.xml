    <load-on-startup>1</load-on-startup>
    <servlet-class>uk.gov.selfserve.ModernGovScraper</servlet-class>
    <init-param>
       <description>This is the URL for the ModernGov meetings page</description>
       <param-name>modernGovURL</param-name>
       <param-value>http://www.northamptonboroughcouncil.com/councillors/mgCalendarAgendaView.aspx</param-value>
    </init-param>
    <init-param>
    	<description>Boolean to tell the serlvet if it needs to use a base URL if the meetings URL is relative</description>
    	<param-name>useModernGovBaseURL</param-name>
    	<param-value>true</param-value></init-param>
    <init-param>
    	<description>This is the base URL to use if the meetings URL is relative</description>
    	<param-name>modernGovBaseURL</param-name>
    	<param-value>http://www.northamptonboroughcouncil.com/councillors/ieListDocuments.aspx?</param-value></init-param>
