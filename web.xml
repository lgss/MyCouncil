<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http:/java.sun.com/dtd/web-app_2_3.dtd">
  <context-param>
    <param-name>laganSystem</param-name>
    <param-value>test</param-value>
  </context-param>
  <context-param>
    <param-name>wsdd</param-name>
    <param-value>C:\Program Files\Apache Software Foundation\Tomcat 6.0\webapps\mycouncil\WEB-INF\classes\uk\gov\selfserve\lagan.wsdd</param-value>
  </context-param>
  <context-param>
    <param-name>errorEmailTo</param-name>
    <param-value>kwhite@northampton.gov.uk</param-value>
  </context-param>
  <context-param>
    <param-name>emailFrom</param-name>
    <param-value>mycouncil@northampton.gov.uk</param-value>
  </context-param>
  <context-param>
    <param-name>smtpHost</param-name>
    <param-value>vscvex1</param-value>
  </context-param>
  <servlet>
    <servlet-name>CreateCall</servlet-name>
    <servlet-class>uk.gov.selfserve.CreateLaganCase</servlet-class>
    <init-param>
      <param-name>confirmationEmail</param-name>
      <param-value>C:\Program Files\Apache Software Foundation\Tomcat 6.0\webapps\mycouncil\email-templates\report-it-confirmation.txt</param-value>
    </init-param>
    <init-param>
      <param-name>textMessageFrom</param-name>
      <param-value>Northampton Borough Council</param-value>
    </init-param>
    <init-param>
      <param-name>localDialCode</param-name>
      <param-value>01604</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>ViewCall</servlet-name>
    <servlet-class>uk.gov.selfserve.ViewLaganCase</servlet-class>
   </servlet>
   <servlet>
    <servlet-name>SendMessage</servlet-name>
    <servlet-class>uk.gov.selfserve.SendMessage</servlet-class>
    <init-param>
      <param-name>test</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>testEmailAddress</param-name>
      <param-value>kwhite@northampton.gov.uk</param-value>
    </init-param> 
    <init-param>
      <param-name>emailVerification</param-name>
      <param-value>@northampton.gov.uk</param-value>
    </init-param>
    <init-param>
      <param-name>emailFrom</param-name>
      <param-value>mycouncil@northampton.gov.uk</param-value>
    </init-param>
    <init-param>
      <param-name>auditEmailTo</param-name>
      <param-value>opsanalysts@northampton.gov.uk</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateCall</servlet-name>
    <url-pattern>/CreateCall</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewCall</servlet-name>
    <url-pattern>/ViewCall</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendMessage</servlet-name>
    <url-pattern>/SendMessage</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>mycouncil.html</welcome-file>
  </welcome-file-list>
</web-app>
